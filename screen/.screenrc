startup_message off
defscrollback 2048
autodetach on

caption always "%{wK}%?%-Lw%?%{bw}%n*%f %t%?(%u)%?%{wK}%?%+Lw%? %= %{= Kw}%110`%109`%111`"

bindkey ^[, prev
bindkey ^[; next

#shell zsh

bind b eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"
termcapinfo xterm* ti@:te@

screen -t couchdb 1
screen -t membase 2
